{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [
      {
        "name": "existingOrNewVM",
        "type": "Microsoft.Common.OptionsGroup",
        "label": "Virtual Machine",
        "defaultValue": "New",
        "toolTip": "This will determine if will deploy new Virtual Machine or use the existing",
        "constraints": {
          "allowedValues": [
            {
              "label": "New",
              "value": "new"
            },
            {
              "label": "Existing",
              "value": "existing"
            }
          ],
          "required": true
        },
        "visible": true
      },
      {
        "name": "virtualMachineName",
        "type": "Microsoft.Common.TextBox",
        "label": "Virtual Machine name",
        "toolTip": "The name of the Virtual Machine.",
        "defaultValue": "my-vm",
        "constraints": {
          "required": true,
          "regex": "^[a-z0-9A-Z-]{3,79}$",
          "validationMessage": "The Virtual Machine Name must be between 3 and 79 characters long and contain letters, numbers and hyphens only."
        }
      }
    ],
    "steps": [
      {
        "name": "vmConfig",
        "label": "Virtual Machine Settings",
        "subLabel": {
          "preValidation": "Note: Fields on this step is hidden if you choose to deploy on an existing virtual machine"
        },
        "elements": [
          {
            "name": "adminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "toolTip": "Admin username for the virtual machine.",
            "osPlatform": "Windows",
            "visible": "[equals(basics('existingOrNewVM'), 'new')]",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "adminPassword",
            "type": "Microsoft.Compute.CredentialsCombo",
            "visible": "[equals(basics('existingOrNewVM'), 'new')]",
            "label": {
              "password": "Password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": {
              "password": "Admin password for the virtual machine."
            },
            "osPlatform": "Windows"
          },
          {
            "name": "windowsOSVersion",
            "type": "Microsoft.Common.DropDown",
            "label": "Windows OS",
            "defaultValue": "Desktop 10 Enterprise",
            "toolTip": "The Windows OS of the virtual machine",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Server 2019 Datacenter",
                  "value": "Server 2019 Datacenter"
                },
                {
                  "label": "Server 2016 Datacenter",
                  "value": "Server 2016 Datacenter"
                },
                {
                  "label": "Desktop 10 Enterprise",
                  "value": "Desktop 10 Enterprise"
                },
                {
                  "label": "Desktop 10 Enterprise N",
                  "value": "Desktop 10 Enterprise N"
                },
                {
                  "label": "Desktop 10 Pro",
                  "value": "Desktop 10 Pro"
                },
                {
                  "label": "Desktop 10 Pro N",
                  "value": "Desktop 10 Pro N"
                },
                {
                  "label": "Server 2012 Datacenter",
                  "value": "Server 2012 Datacenter"
                },
                {
                  "label": "Server 2012 Datacenter R2",
                  "value": "Server 2012 Datacenter R2"
                },
                {
                  "label": "Windows Server 2008 R2 Service Pack 1",
                  "value": "Windows Server 2008 R2 Service Pack 1"
                }
              ],
              "required": true
            },

            "visible": "[equals(basics('existingOrNewVM'), 'new')]"
          },
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Size",
            "toolTip": "Size of the virtual machine.",
            "recommendedSizes": ["Standard_D1", "Standard_D2", "Standard_D3"],
            "options": {
              "hideDiskTypeFilter": false
            },
            "osPlatform": "Windows",
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "2012-R2-Datacenter"
            },
            "count": 2,

            "visible": "[equals(basics('existingOrNewVM'), 'new')]"
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "visible": "[equals(basics('existingOrNewVM'), 'new')]",
            "label": "Diagnostic storage account",
            "toolTip": "Storage Account for the Virtual Machine's diagnostics",
            "defaultValue": {
              "type": "Standard_LRS",
              "name": "[concat(replace(basics('virtualMachineName'), '-', ''), take(replace(guid(), '-', ''), 10))]"
            },
            "constraints": {
              "allowedTypes": ["Standard_LRS", "Standard_GRS"]
            }
          },
          {
            "name": "publicIpAddress",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "visible": "[equals(basics('existingOrNewVM'), 'new')]",
            "label": {
              "publicIpAddress": "Public IP Address for the VM",
              "domainNameLabel": "DNS Prefix for the public IP Address"
            },
            "toolTip": {
              "publicIpAddress": "Public IP Address for the VM",
              "domainNameLabel": "DNS Prefix for the public IP Address, must be globally unique"
            },
            "defaultValue": {
              "publicIpAddressName": "[concat(basics('virtualMachineName'), '-ip')]",
              "domainNameLabel": "[concat(basics('virtualMachineName'), '-', take(replace(guid(), '-', ''), 10))]"
            },
            "options": {
              "hideExisting": false,
              "hideNone": false
            },
            "constraints": {
              "required": {
                "domainNameLabel": true
              }
            }
          },
          {
            "name": "virtualNetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "visible": "[equals(basics('existingOrNewVM'), 'new')]",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "toolTip": {
              "virtualNetwork": "Name of the virtual network",
              "subnets": "Subnets for the virtual network"
            },
            "defaultValue": {
              "name": "VirtualNetwork",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/16"
            },
            "subnets": {
              "subnet1": {
                "label": "Subnet",
                "defaultValue": {
                  "name": "Subnet-1",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/24",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": false
                }
              }
            }
          }
        ]
      },
      {
        "name": "openitConfig",
        "label": "OpeniT Client Configuration",
        "elements": [
          {
            "name": "openiTServerURI",
            "type": "Microsoft.Common.TextBox",
            "label": "OpeniT Server URI",
            "toolTip": "The Open iT Server URI is required to obtain the server details automatically",
            "defaultValue": "https://openit2019.openitcloud.com:443",
            "constraints": {
              "required": true,
              "regex": "^https?://\\S+$",
              "validationMessage": "The Server URI must be in the format 'http(s)://<servername>:<port>"
            }
          }
        ]
      }
    ],
    "outputs": {
      "location": "[location()]",
      "virtualMachineName": "[basics('virtualMachineName')]",
      "existingOrNewVM": "[basics('existingOrNewVM')]",
      "adminUsername": "[steps('vmConfig').adminUsername]",
      "adminPassword": "[steps('vmConfig').adminPassword.password]",
      "windowsOSVersion": "[steps('vmConfig').windowsOSVersion]",
      "vmSize": "[steps('vmConfig').vmSize]",
      "storageAccountName": "[steps('vmConfig').storageAccount.name]",
      "storageAccountType": "[steps('vmConfig').storageAccount.type]",
      "addressPrefixes": "[steps('vmConfig').virtualNetwork.addressPrefixes]",
      "subnetName": "[steps('vmConfig').virtualNetwork.subnets.subnet1.name]",
      "subnetPrefix": "[steps('vmConfig').virtualNetwork.subnets.subnet1.addressPrefix]",
      "virtualNetworkNewOrExisting": "[steps('vmConfig').virtualNetwork.newOrExisting]",
      "virtualNetworkResourceGroup": "[steps('vmConfig').virtualNetwork.resourceGroup]",
      "virtualNetworkName": "[steps('vmConfig').virtualNetwork.name]",
      "publicIpAddressName": "[steps('vmConfig').publicIpAddress.name]",
      "dnsLabelPrefix": "[steps('vmConfig').publicIpAddress.domainNameLabel]",
      "openitServerURI": "[steps('openitConfig').openiTServerURI]"
    }
  }
}
